@model ViewModel
<h2>New Task</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-group">
     
        <label asp-for="CurrentTask.TaskDescrption">Task Descreiption:</label>
        <input type="text" asp-for="CurrentTask.TaskDescrption" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CurrentTask.CategoryID">Category:</label>
        <select asp-for="CurrentTask.CategoryID" class="form-control"
                asp-items="@(new SelectList(Model.Category,"CategoryId","CategoryName"))">
            <option value=""></option>
        </select>

    </div>

    <div class="form-group">
        <label asp-for="CurrentTask.DueDate">Due Date:</label>
        <input type="text" asp-for="CurrentTask.DueDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CurrentTask.StatusId">Stautus:</label>
        <select asp-for="CurrentTask.StatusId" class="form-control"
                asp-items="@(new SelectList(Model.Status,"StatusID","StatusName"))">
            <option value=""></option>
        </select>

    </div>
    <button type="submit"  asp-controller="Home" asp-action="Add" class="btn btn-primary">Add</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Cancel</a>

</form>